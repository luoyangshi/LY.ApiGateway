{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/connect/token",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/auth/token",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "ServiceName": "AuthService",
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/auth/swagger.json",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/auth/swagger",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "PUT" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "ServiceName": "AuthService",
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/api/health",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/auth/health",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "ServiceName": "AuthService",
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/api/home/{action}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/auth/home/{action}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "ServiceName": "AuthService",
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 5,
        "TimeoutValue": 5000
      },
      "ServiceName": "AuthService",
      "UseServiceDiscovery": true
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "AuthKey",
      //  "AllowedScopes": []
      //}
    }
  ]
}